<html>
    <head>
        <link rel="stylesheet" href="/stylesheets/style.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@200&display=swap" rel="stylesheet">
        <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
        <script src="/javascripts/project.js"></script>
    </head>
    <body>
        <form action="/mvdata/submit_movie" method="post" enctype="multipart/form-data">
        <div class="mainbox">

            <div class="box">

                <div class="row">

                    <div class="col-12 centerstyle fontstyle">
                        <img src="/images/logo.png" width="40">
                        <span>Movies Tickets</span>
                        <a href="/movies/show_details" style="margin-left: auto;"><img src="/images/List.png" width="40"></a>
                    </div>

                </div>


                <div class="row">

                    <div class="col-12">
                        <hr>
                    </div>

                </div>


                <div class="row">
                        
                    <div class="col-4">
                        <select class="form-select" id="stateid" name="stateid">
                            <option selected>States</option>
                            
                          </select>
                    </div>

                    <div class="col-4">
                        <select class="form-select" id="cityid" name="cityid">
                            <option selected>City</option>

                          </select>
                    </div>

                    <div class="col-4">
                        <select class="form-select" id="cinemaid" name="cinemaid">
                            <option selected>Cinema</option>
                          </select>
                    </div>

                </div>

                <div class="row mt-3">

                    <div class="col-6">
                        <select class="form-select" id="screenid" name="screenid">
                            <option selected>Screens</option>
                            
                          </select>
                    </div>

                    <div class="col-6">
                        <input type="text" class="form-control" id="moviename" name="moviename" placeholder="Movie Name">
                    </div>
                    
                </div>



                <div class="row mt-3">

                    <div class="col-12">
                        <textarea class="form-control" name="description" placeholder="Movie Description" rows="3"></textarea>
                    </div>
                    
                </div>


                <div class="row mt-3">

                    <div class="col-4">
                        <input type="date" class="form-control" name="date">
                    </div>

                    <div class="col-4">
                        <input type="text" class="form-control" name="ticketprice" placeholder="Ticket Price">
                    </div>

                    <div class="col-4">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="status" id="2d" value="2D">
                            <label class="form-check-label" for="2d">2D</label>
                          </div>
                          <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="status" id="3d" value="3D">
                            <label class="form-check-label" for="3d">3D</label>
                          </div>
                    </div>
                    
                </div>


                <div class="row mt-3">

                    <div class="col-4">
                        <input type="text" class="form-control" name="actor" placeholder="Actor">
                    </div>

                    <div class="col-4">
                        <input type="text" class="form-control" name="actress" placeholder="Actress">
                    </div>

                    <div class="col-4">
                        <input type="text" class="form-control" name="singer" placeholder="Singer">
                    </div>
                    
                </div>

                <div class="row mt-2">
                        
                    <div class="col-6">
                        <label for="picture" class="form-label">Upload Movie Poster</label>
                        <input accept="image/jpeg, image/png" class="form-control" type="file" id="poster" name="poster">
                    </div>

                    <div class="col-6 centerstyletwo" >
                        <img src="/images/image.png" width="60" id="posterimage" style="border-radius: 10%;">
                    </div>

                </div>

                <div class="row mt-3">
                        
                    <div class="col-6 centerstyletwo">
                        <button type="submit" class="btn btn-primary" style="width: 200px;">Submit</button>
                    </div>

                    <div class="col-6 centerstyletwo" >
                        <button type="reset" class="btn btn-primary" style="width: 200px;">Reset</button>
                    </div>

                </div>

                <div class="row mt-3">

                    <div class="col-12 centerstyletwo">
                        console.log("message")
                    </div>

                </div>       

                

                
               
                







            </div>
            
        </div>
    </form>
    </body>
</html>