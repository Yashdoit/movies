<html>
    <head>
        <link rel="stylesheet" href="/stylesheets/style.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@200&display=swap" rel="stylesheet">
        <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
        <script src="/javascripts/project.js"></script>
    </head>
    <body>
        <form action="/movies/edit_delete_movie" method="post">
            <input type="hidden" value="<%=data.movieid%>" name="movieid">
        <div class="mainbox">

            <div class="box">

                <div class="row">

                    <div class="col-12 centerstyle fontstyle">
                        <img src="/images/logo.png" width="40">
                        <span>Movies Tickets</span>
                        <a href="/movies/displayallmovies" style="margin-left: auto;"><img src="/images/List.png" width="40"></a>
                    </div>

                </div>


                <div class="row">

                    <div class="col-12">
                        <hr>
                    </div>

                </div>


                <div class="row">
                        
                    <div class="col-4">
                        <select class="form-select" id="stateid" name="stateid">
                            <option value="<%= data.stateid %>"><%= data.statename %></option>
                            
                          </select>
                    </div>

                    <div class="col-4">
                        <select class="form-select" id="cityid" name="cityid">
                            <option value="<%= data.cityid %>"><%= data.cityname %></option>

                          </select>
                    </div>

                    <div class="col-4">
                        <select class="form-select" id="cinemaid" name="cinemaid">
                            <option value="<%= data.cinemaid %>"><%= data.cinemaname %></option>
                          </select>
                    </div>

                </div>

                <div class="row mt-3">

                    <div class="col-6">
                        <select class="form-select" id="screenid" name="screenid">
                            <option value="<%= data.screenid %>"><%= data.screenname %></option>
                            
                          </select>
                    </div>

                    <div class="col-6">
                        <input type="text" value="<%= data.moviename %>" class="form-control" id="moviename" name="moviename" placeholder="Movie Name">
                    </div>
                    
                </div>



                <div class="row mt-3">

                    <div class="col-12">
                        <textarea class="form-control" value="<%= data.description %>" name="description" placeholder="Movie Description" rows="3"><%=data.description%></textarea>
                    </div>
                    
                </div>


                <div class="row mt-3">

                    <div class="col-4">
                        <input type="date" value="<%= data.releasedate %>" class="form-control" name="date">
                    </div>

                    <div class="col-4">
                        <input type="text" value="<%= data.ticketprice %>" class="form-control" name="ticketprice" placeholder="Ticket Price">
                    </div>

                    <%
                        var avl = {'2D':false,'3D':false}
                        avl[data.status]=true
                    %>

                    <div class="col-4">
                        <div class="form-check form-check-inline">
                            <input <%=avl['2D']?'checked':''%> class="form-check-input" type="radio" name="status" id="2d" value="2D">
                            <label class="form-check-label" for="2d">2D</label>
                          </div>
                          <div class="form-check form-check-inline">
                            <input <%=avl['3D']?'checked':''%> class="form-check-input" type="radio" name="status" id="3d" value="3D">
                            <label class="form-check-label" for="3d">3D</label>
                          </div>
                    </div>
                    
                </div>


                <div class="row mt-3">

                    <div class="col-4">
                        <input type="text" value="<%= data.actor %>" class="form-control" name="actor" placeholder="Actor">
                    </div>

                    <div class="col-4">
                        <input type="text" value="<%= data.actress %>" class="form-control" name="actress" placeholder="Actress">
                    </div>

                    <div class="col-4">
                        <input type="text" value="<%= data.singers %>" class="form-control" name="singer" placeholder="Singer">
                    </div>
                    
                </div>
                

                <div class="row mt-3">
                        
                    <div class="col-6 centerstyletwo">
                        <button type="submit" name="btn" value="Edit" class="btn btn-primary" style="width: 200px;">Edit</button>
                    </div>

                    <div class="col-6 centerstyletwo" >
                        <button type="submit" name="btn" value="Delete" class="btn btn-primary" style="width: 200px;">Delete</button>
                    </div>

                </div>      

                

                
               
                







            </div>
            
        </div>
    </form>
    </body>
</html>