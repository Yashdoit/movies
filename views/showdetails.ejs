<html>
    <head>
        <link rel="stylesheet" href="/stylesheets/style.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@200&display=swap" rel="stylesheet">
    </head>
    <body>
      
        
        
    <div class="mainbox">
        <div class="boxtable">

                <div class="row">

                    <div class="col-12 fontstyle centerstyle">
                        <img src="/images/logo.png" width="50">
                        <span>Movies Ticket List</span>
                        <a href="/movies/moviesinterface" style="margin-left: auto;"><img src="/images/addproducts.png" width="30"></a>
                    </div>

                </div>

                <div class="row">

                    <div class="col-12">
                        <hr>
                    </div>

                </div>

                <% if(status) { %>
                    <table class="table table-hover">
                        <thead>
                            <th>Sn</th>
                            <th>State</th>
                            <th>City</th>
                            <th>Cinema</th>
                            <th>Screen</th>
                            <th>Movie</th>
                            <th>Description</th>
                            <th>ReleaseDate</th>
                            <th>TicketPrice</th>
                            <th>Actor</th>
                            <th>Actress</th>
                            <th>Singer</th>
                            <th>Poster</th>
                            <th>Update</th>
                        </thead>
                        <tbody>
                            <% data.map((item,index)=>{ %>
                            <tr>
                                <td><%=index+1 %></td>
                                <td><%=item.stateid %><br><%=item.statename %></td>
                                <td><%=item.cityid %><br><%=item.cityname %></td>
                                <td><%=item.cinemaid %><br><%=item.cinemaname %></td>
                                <td><%=item.screenid %><br><%=item.screenname %></td>
                                <td><%=item.moviename %><br><%=item.status %></td>
                                <td><%=item.description %></td>
                                <td><%=item.releasedate %></td>
                                <td><%=item.ticketprice %></td>
                                <td><%=item.actor %></td>
                                <td><%=item.actress %></td>
                                <td><%=item.singers %></td>
                                <td><a href="/movies/show_picture?movieid=<%=item.movieid%>&moviename=<%=item.moviename%>&poster=<%=item.poster%>"><img src="/images/<%=item.poster %>" width="50" height="50"></a></td>
                                <td><a href="/movies/display_movies_by_id?movieid=<%=item.movieid%>" style="text-decoration: none;">Edit/Delete</a></td>
                            </tr>
                            <%})%>
                        </tbody>
                        </table>
                        <%}%>

        </div>
    </div>

</html>