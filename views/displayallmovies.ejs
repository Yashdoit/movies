<html>
    <head>
        <link rel="stylesheet" href="/stylesheets/style.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@200&display=swap" rel="stylesheet">
    </head>
    <body>
      
        
        <% if(status) { %>
    <div class="mainbox">
        <div class="boxtable">

                <div class="row">

                    <div class="col-12 fontstyle centerstyle">
                        <img src="/images/logo.png" width="50">
                        <span>Movies Ticket List</span>
                        <a href="/movies/moviesinterface" style="margin-left: auto;"><img src="/images/addproducts.png" width="30"></a>
                    </div>

                </div>

                <div class="row">

                    <div class="col-12">
                        <hr>
                    </div>

                </div>


        
            <% data.map((item,index)=>{ %>
                <div class="showcard">
                    <div class="card" style="width: 15rem; border-radius: 10px;">
                        <a href="/movies/show_picture?movieid=<%=item.movieid%>&moviename=<%=item.moviename%>&poster=<%=item.poster%>"><img src="/images/<%=item.poster %>" class="card-img-top" width="100%" height="250" style="border-radius: 10px;"></a>
                        <div class="card-body">
                          <h5 class="card-title"><%=item.moviename %></h5>
                          <h5 class="card-title"><%=item.screenname %></h5>
                          <p class="card-text"><%=item.status %></p>
                          <a href="/movies/display_movies_by_id?movieid=<%=item.movieid%>" class="btn btn-primary" style="text-decoration: none; color: rgb(255, 255, 255);">Edit/Delete</a>
                        </div>
                    </div>
                

           <% }) %>
        </div>
        
        <% } %>
            
    </div>
</div>

    </body>
</html>