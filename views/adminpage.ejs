    <body>
        <form action="/admin/check_admin_login" method="post">
            <div class="loginmainbox">

                <div class="loginbox">

                    <div class="row">

                        <div class="col-6">
                            <img src="/images/sideimage.png" width="500">
                        </div>

                        <div class="col-6" style=" box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;">
                            
